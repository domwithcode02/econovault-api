# EconoVault API - Development Environment Configuration
ENVIRONMENT=dev
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
DATABASE_URL=postgresql://econovault_dev:${DB_PASSWORD}@econovault-db-dev.cx8k6c0mwva4.us-west-1.rds.amazonaws.com/econovault_dev
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration (when available)
REDIS_URL=redis://redis-dev:6379
REDIS_POOL_SIZE=10

# API Configuration
API_TITLE=EconoVault API (Development)
API_VERSION=1.0.0-dev
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# Security Configuration
SECRET_KEY=${API_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
MASTER_ENCRYPTION_KEY=${JWT_SECRET}

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# External API Keys
BLS_API_KEY=${BLS_API_KEY}
BEA_API_KEY=${BEA_API_KEY}
FRED_API_KEY=${FRED_API_KEY}

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://dev.econovault.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_PREFIX=econovault:dev

# Database Migration
RUN_MIGRATIONS=true
WAIT_FOR_DB=true

# Feature Flags
ENABLE_REAL_DATA=true
ENABLE_STREAMING=true
ENABLE_GDPR_COMPLIANCE=true
ENABLE_AUDIT_LOGGING=true

# Development specific
HOT_RELOAD=true
DEBUG_SQL=false
PROFILING_ENABLED=true