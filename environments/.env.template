# EconoVault API - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit this file with real values to version control

# ===================================================================
# Environment Configuration
# ===================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ===================================================================
# Database Configuration
# ===================================================================
# For development (SQLite)
DATABASE_URL=sqlite:///./dev.db

# For production (PostgreSQL on Render)
# DATABASE_URL=postgresql://user:password@hostname:port/database

DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ===================================================================
# Redis Configuration
# ===================================================================
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
REDIS_ENABLED=false
REDIS_FALLBACK_ENABLED=true

# ===================================================================
# API Configuration
# ===================================================================
API_TITLE=EconoVault API (Development)
API_VERSION=1.0.0-dev
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# ===================================================================
# Security Configuration
# ===================================================================
# Generate these with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-min-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
MASTER_ENCRYPTION_KEY=your-encryption-key-here-min-32-characters

# ===================================================================
# Rate Limiting
# ===================================================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ===================================================================
# EXTERNAL API KEYS - REQUIRED FOR PRODUCTION
# ===================================================================
# Get these from the respective data providers:
# BLS: https://www.bls.gov/developers/
# BEA: https://www.bea.gov/data/api
# FRED: https://fred.stlouisfed.org/docs/api/api_key.html

BLS_API_KEY=your-bls-api-key-here
BEA_API_KEY=your-bea-api-key-here
FRED_API_KEY=your-fred-api-key-here

# ===================================================================
# CORS Configuration
# ===================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# ===================================================================
# Logging Configuration
# ===================================================================
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ===================================================================
# Monitoring Configuration
# ===================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# ===================================================================
# Cache Configuration
# ===================================================================
CACHE_TTL_SECONDS=300
CACHE_PREFIX=econovault:dev

# ===================================================================
# Database Migration
# ===================================================================
RUN_MIGRATIONS=true
WAIT_FOR_DB=true

# ===================================================================
# Feature Flags
# ===================================================================
ENABLE_REAL_DATA=true
ENABLE_STREAMING=true
ENABLE_GDPR_COMPLIANCE=true
ENABLE_AUDIT_LOGGING=true

# ===================================================================
# Development Specific
# ===================================================================
HOT_RELOAD=true
DEBUG_SQL=false
PROFILING_ENABLED=true

# ===================================================================
# Alerting Configuration (Optional)
# ===================================================================
SLACK_TOKEN=your-slack-bot-token
SLACK_CHANNEL=#alerts
PAGERDUTY_TOKEN=your-pagerduty-token
PAGERDUTY_ROUTING_KEY=your-routing-key

ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_FROM=noreply@econovault.com
ALERT_EMAIL_TO=admin@econovault.com
ALERT_SMTP_HOST=smtp.gmail.com
ALERT_SMTP_PORT=587
ALERT_SMTP_USERNAME=your-smtp-username
ALERT_SMTP_PASSWORD=your-smtp-password
ALERT_SMTP_USE_TLS=true