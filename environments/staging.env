# EconoVault API - Staging Environment Configuration
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://econovault_db_user:ZAVQLwpbCEr9pEKnYMugHOvsQ1764yHe@dpg-d3bmeur7mgec739r7af0-a/econovault_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Redis Configuration (when available)
REDIS_URL=redis://redis-staging:6379
REDIS_POOL_SIZE=20

# API Configuration
API_TITLE=EconoVault API (Staging)
API_VERSION=1.0.0-staging
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# Security Configuration
SECRET_KEY=${API_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
MASTER_ENCRYPTION_KEY=${JWT_SECRET}

# Rate Limiting
RATE_LIMIT_PER_MINUTE=500
RATE_LIMIT_PER_HOUR=5000

# External API Keys
BLS_API_KEY=${BLS_API_KEY}
BEA_API_KEY=${BEA_API_KEY}
FRED_API_KEY=${FRED_API_KEY}

# CORS Configuration
CORS_ORIGINS=["https://staging.econovault.com", "https://app-staging.econovault.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# Cache Configuration
CACHE_TTL_SECONDS=600
CACHE_PREFIX=econovault:staging

# Database Migration
RUN_MIGRATIONS=true
WAIT_FOR_DB=true

# Feature Flags
ENABLE_REAL_DATA=true
ENABLE_STREAMING=true
ENABLE_GDPR_COMPLIANCE=true
ENABLE_AUDIT_LOGGING=true

# Staging specific
PERFORMANCE_TESTING=true
LOAD_TESTING_ENABLED=true
SECURITY_SCANNING=true