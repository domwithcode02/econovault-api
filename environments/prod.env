# EconoVault API - Production Environment Configuration
ENVIRONMENT=prod
DEBUG=false
LOG_LEVEL=WARNING

# Database Configuration
DATABASE_URL=postgresql://econovault_db_user:ZAVQLwpbCEr9pEKnYMugHOvsQ1764yHe@dpg-d3bmeur7mgec739r7af0-a/econovault_db
DB_POOL_SIZE=50
DB_MAX_OVERFLOW=100

# Redis Configuration (when available)
REDIS_URL=redis://redis-prod:6379
REDIS_POOL_SIZE=50

# API Configuration
API_TITLE=EconoVault API
API_VERSION=1.0.0
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# Security Configuration
SECRET_KEY=${API_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
MASTER_ENCRYPTION_KEY=${JWT_SECRET}

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000

# External API Keys
BLS_API_KEY=${BLS_API_KEY}
BEA_API_KEY=${BEA_API_KEY}
FRED_API_KEY=${FRED_API_KEY}

# CORS Configuration
CORS_ORIGINS=["https://econovault.com", "https://www.econovault.com", "https://app.econovault.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_BYTES=52428800
LOG_BACKUP_COUNT=30

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# Cache Configuration
CACHE_TTL_SECONDS=1800
CACHE_PREFIX=econovault:prod

# Database Migration
RUN_MIGRATIONS=false
WAIT_FOR_DB=true

# Feature Flags
ENABLE_REAL_DATA=true
ENABLE_STREAMING=true
ENABLE_GDPR_COMPLIANCE=true
ENABLE_AUDIT_LOGGING=true

# Production specific
HIGH_AVAILABILITY=true
AUTO_SCALING_ENABLED=true
BACKUP_ENABLED=true
DISASTER_RECOVERY=true
COMPLIANCE_MODE=true